{
  "name": "mercador-backend",
  "version": "1.0.0",
  "description": "Backend moderno y escalable con Hono, Supabase y Redis",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "hono",
    "supabase",
    "redis",
    "typescript",
    "backend",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@hono/zod-openapi": "^1.1.0",
    "@supabase/supabase-js": "^2.39.0",
    "bcrypt": "^5.1.1",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.1",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.21.0",
    "prom-client": "^14.2.0",
    "redis": "^5.8.2",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie": "^0.6.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
